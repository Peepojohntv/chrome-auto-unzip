{
  "manifest_version": 3,
  "name": "Auto ZIP Entpacker",
  "version": "1.2",
  "description": "Entpackt ZIP-Downloads automatisch in den Download-Ordner.",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto ZIP Entpacker"
  }
}